{
  "family": "ecommerce-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",

  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "",

  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "${NGINX_IMAGE}",
      "essential": true,
      "portMappings": [
        { "containerPort": 80, "protocol": "tcp" }
      ]
    },
    {
      "name": "frontend",
      "image": "${FRONTEND_IMAGE}",
      "essential": true,
      "portMappings": [
        { "containerPort": 3000, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "REACT_APP_API", "value": "http://nginx" },
        { "name": "HOST", "value": "0.0.0.0" }
      ]
    },
    {
      "name": "backend",
      "image": "${BACKEND_IMAGE}",
      "essential": true,
      "portMappings": [
        { "containerPort": 5000, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "PORT", "value": "5000" },
        { "name": "DEV_MODE", "value": "production" }
      ],
      "secrets": [
        { "name": "MONGO_URL",  "valueFrom": "${SECRET_ARN}:MONGO_URL::" },
        { "name": "JWT_SECRET", "valueFrom": "${SECRET_ARN}:JWT_SECRET::" }
      ]
    }
  ]
}
